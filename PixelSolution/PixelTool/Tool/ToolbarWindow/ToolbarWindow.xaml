<UserControl x:Class="PixelTool.ToolbarWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="80">
    
    <Border DockPanel.Dock="Top" 
        Background="{StaticResource PixelBorderBrush}" 
        BorderBrush="#3F3F46" 
        Margin="10" 
        BorderThickness="1" 
        CornerRadius="10">
        
        <Grid HorizontalAlignment="Center" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical" Margin="5,0">

                <local:ToolbarButton Width="50" ButtonIcon="➕">
                    <local:ToolbarButton.PopupContent>
                        <StackPanel>
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="Foreground" Value="#D1D1E0"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="10,6"/>
                                    <Setter Property="Margin" Value="0,1"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                    <Setter Property="Cursor" Value="Hand"/>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter Margin="{TemplateBinding Padding}"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2D2E45"/>
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#5D67E8"/>
                                            <Setter Property="Foreground" Value="#FFFFFF"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Resources>

                            <TextBlock Text="Create GameObject" Foreground="#8A8DA9" FontSize="11" Margin="8,5,0,5" FontWeight="Bold"/>
                            <Button Content="📦 Default" Click="DefaultGameObject"/>
                            <Button Content="🔲 Quad" Click="QuadObject" />
                            <Button Content="📜 LuaScript" Click="LuaObject" />
                            <Button Content="🎥 Camera" Click="CameraObject" />
                            <Rectangle Height="1" Fill="#2D2E45" Margin="5,5,5,5"/>
                            <TextBlock Text="Create AssetFile" Foreground="#8A8DA9" FontSize="11" Margin="8,5,0,5" FontWeight="Bold"/>
                            <Button Content="📝 Lua File" />
                        </StackPanel>
                    </local:ToolbarButton.PopupContent>
                </local:ToolbarButton>
                

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
