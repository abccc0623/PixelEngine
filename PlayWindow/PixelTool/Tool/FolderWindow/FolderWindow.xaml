<UserControl x:Class="PixelTool.FolderWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelTool"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.Resources>
        <ContextMenu x:Key="ItemContextMenu">
            <MenuItem Header="열기 (VS Code)" Click="MenuOpen_Click"/>
            <MenuItem Header="파일 삭제" Click="MenuDelete_Click"/>
            <Separator/>
            <MenuItem Header="탐색기에서 보기" Click="MenuShowInExplorer_Click"/>
        </ContextMenu>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>

        <TreeView x:Name="FolderTreeView"  
          Grid.Row="0"
          Background="#252526"
          Foreground="White"
          BorderThickness="0"
          TreeViewItem.Expanded="FolderTreeView_Expanded"
          SelectedItemChanged="FolderTreeView_SelectedItemChanged">

            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#007ACC"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#2A5A82"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="White"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}" Color="White"/>
                    </Style.Resources>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3F3F46"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                    <StackPanel Orientation="Horizontal" Margin="2">
                        <TextBlock Text="📁" Margin="0,0,5,0" Foreground="White"/>
                        <TextBlock Text="{Binding Name}" Foreground="White"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>


        <GridSplitter
            Grid.Row="1" 
            Height="4" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Center"
            Background="#333333"
            ShowsPreview="True">
            <GridSplitter.Style>
                <Style TargetType="{x:Type GridSplitter}">
                    <Setter Property="Background" Value="#333333"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#DA34AE"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </GridSplitter.Style>
        </GridSplitter>


        
        
        
        <ListView Grid.Row="2" 
          x:Name="FileListView"
          Background="#252526" 
          Foreground="White" 
          BorderThickness="0"
          ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="ContextMenu" Value="{StaticResource ItemContextMenu}"/>

                    <EventSetter Event="MouseDoubleClick" Handler="FileListViewItem_MouseDoubleClick"/>

                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#2A5A82"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#007ACC"/>
                    </Style.Resources>

                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3F3F46"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>



            <ListView.ItemsPanel>

                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Width="100" Margin="5">
                        <Grid Height="50">
                            <TextBlock x:Name="IconText" 
                           Text="{Binding Icon}" 
                           FontSize="40" 
                           HorizontalAlignment="Center" 
                           Foreground="{Binding IconColor}"
                           Visibility="Visible"/>

                            <Image x:Name="FileThumbnail" 
                       Source="{Binding FullPath}" 
                       Width="45" Height="45" 
                       Stretch="Uniform"
                       Visibility="Collapsed"/>
                        </Grid>

                        <TextBlock Text="{Binding Name}" 
                       Foreground="White" 
                       FontSize="11" 
                       HorizontalAlignment="Center"
                       TextTrimming="CharacterEllipsis"
                       Margin="0,5,0,0"/>
                    </StackPanel>

                    <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding IsImage}" Value="True">
                            <Setter TargetName="IconText" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="FileThumbnail" Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </DataTemplate.Triggers>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</UserControl>
