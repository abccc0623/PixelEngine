<UserControl x:Class="PixelTool.Tool.ToolbarWindow.Toolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PixelTool.Tool.ToolbarWindow"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <ToolBarTray DockPanel.Dock="Top" Background="#F0F0F0">
            <ToolBar>
                <Button Content="Play" Click="CreateGameObject" Margin="2"/>
                <Button Content="Stop" Click="CreateScene" Margin="2"/>
                <Separator/>
                <Button Content="Save Scene" Margin="2"/>
            </ToolBar>
        </ToolBarTray>
    </Grid>
</UserControl>
